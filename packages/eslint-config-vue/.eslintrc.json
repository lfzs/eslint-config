{
  "extends": [
    "@jzfe/eslint-config-vanilla",
    "plugin:vue/vue3-strongly-recommended"
  ],
  "env": {
    "node": true,
    "browser": true
  },
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@babel/eslint-parser",
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "vue/no-lone-template": 1,
    "vue/this-in-template": 2,
    "vue/component-api-style": 2,
    "vue/component-name-in-template-casing": 1,
    "vue/component-options-name-casing": 1,
    "vue/custom-event-name-casing": 1,
    "vue/match-component-import-name": 1,
    "vue/next-tick-style": 1,
    "vue/no-multiple-objects-in-class": 1,
    "vue/no-potential-component-option-typo": 1,
    "vue/no-ref-object-destructure": 1,
    "vue/no-undef-properties": 2,
    "vue/no-useless-mustaches": 1,
    "vue/no-useless-v-bind": 1,
    "vue/prefer-separate-static-class": 1,
    "vue/prefer-true-attribute-shorthand": 1,
    "vue/script-indent": 1

    // "vue/array-bracket-spacing": 2,
    // "vue/arrow-spacing": 2,
    // "vue/block-spacing": 2,
    // "vue/brace-style": [2, "1tbs", { "allowSingleLine": true }],
    // "vue/comma-dangle": [2, "always-multiline"],
    // "vue/comma-spacing": 2,
    // "vue/component-definition-name-casing": [2, "kebab-case"],
    // "vue/dot-notation": 2,
    // "vue/eqeqeq": 2,
    // "vue/func-call-spacing": 2,
    // "vue/html-self-closing": 2,
    // "vue/keyword-spacing": 2,
    // "vue/key-spacing": 2,
    // "vue/max-attributes-per-line": [2, { "singleline": 5 }],
    // "vue/multiline-html-element-content-newline": [2, { "allowEmptyLines": true }],
    // "vue/no-irregular-whitespace": 2,
    // "vue/no-reserved-component-names": 2,
    // "vue/no-useless-concat": 2,
    // "vue/prefer-template": 2,
    // "vue/require-direct-export": 2,
    // "vue/require-name-property": 2,
    // "vue/singleline-html-element-content-newline": 0,
    // "vue/space-infix-ops": 2,
    // "vue/space-in-parens": 2,
    // "vue/template-curly-spacing": 2,
    // "vue/valid-define-props": 2
  },
  "overrides": [
    {
      "files": ["*.vue"],
      "rules": {
        "indent": 0
      }
    }
  ],
  "globals": {
    "defineProps": "readonly",
    "defineEmits": "readonly",
    "defineExpose": "readonly",
    "withDefaults": "readonly"
  }
}
