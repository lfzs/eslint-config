{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": true,
    "browser": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-console": 2,
    "no-empty": [2, { "allowEmptyCatch": true }],

    "class-methods-use-this": 1,
    "dot-location": [1, "property"],
    "dot-notation": 1,
    "eqeqeq": 2,
    "no-alert": 2,
    "no-extend-native": 2,
    "no-lone-blocks": 1,
    "no-multi-spaces": 1,
    "no-new-wrappers": 1,
    "no-proto": 2,
    "no-return-await": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": 2,
    "no-useless-concat": 1,
    "no-useless-return": 2,
    "no-void": 2,
    "require-await": 2,

    "no-undef-init": 1,

    "array-bracket-spacing": 1,
    "block-spacing": 1,
    "brace-style": 1,
    "comma-dangle": [1, "only-multiline"],
    "comma-spacing": 1,
    "comma-style": 1,
    "computed-property-spacing": 1,
    "eol-last": 2,
    "func-call-spacing": 1,
    "indent": [2, 2, { "SwitchCase": 1 }],
    "key-spacing": 1,
    "keyword-spacing": 1,
    "linebreak-style": 1,
    "multiline-ternary": [1, "never"],
    "no-lonely-if": 1,
    "no-multiple-empty-lines": [1, { "max": 1, "maxBOF": 0, "maxEOF": 0 }],
    "no-tabs": 2,
    "no-trailing-spaces": 1,
    "no-unneeded-ternary": 1,
    "no-whitespace-before-property": 1,
    "object-curly-spacing": [1, "always"],
    "quote-props": [1, "as-needed"],
    "quotes": [2, "single"],
    "semi": [1, "never", { "beforeStatementContinuationChars": "never" }],
    "semi-style": [1, "last"],
    "space-before-blocks": 1,
    "space-before-function-paren": [1, { "named": "never", "anonymous": "never" }],
    "space-in-parens": 1,
    "space-infix-ops": 1,
    "switch-colon-spacing": 1,

    "arrow-spacing": 1,
    "generator-star-spacing": [2, "after"],
    "no-var": 2,
    "prefer-const": 1,
    "prefer-template": 1,
    "rest-spread-spacing": 1,
    "template-curly-spacing": 1
  }
}
